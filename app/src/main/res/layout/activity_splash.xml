<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44007AFF"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.example.bj.superdemo.ui.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/px200_w"
            android:layout_height="@dimen/px200_h"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px30_h"
            android:src="@drawable/dvq" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100_h"
            android:hint="请输入账号" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100_h"
            android:hint="请输入密码" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80_h"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/px30_h"
            android:layout_marginRight="@dimen/px30_h"
            android:background="@color/calendar_selected_day_bg"
            android:text="登录"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
