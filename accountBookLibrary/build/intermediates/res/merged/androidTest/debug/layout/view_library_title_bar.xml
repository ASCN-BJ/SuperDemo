<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <LinearLayout
        android:id="@+id/go_back_library"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_10"
            android:background="@drawable/go_back_library"
            android:gravity="center" />

        <TextView
            android:id="@+id/textContent_library"
            style="@style/titleButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_back" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_library"
        style="@style/titleStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/spacing_5"
        android:gravity="center"
        android:maxWidth="@dimen/spacing_180"
        android:singleLine="true"
        android:text="title" />

    <TextView
        android:id="@+id/tvBtnRight1_library"
        style="@style/titleStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_10"
        android:paddingRight="@dimen/spacing_16"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/ibBtnRight2_library"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ibBtnRight1_library"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/spacing_10"
        android:paddingRight="@dimen/spacing_16"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/ibBtnRight1_library"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/spacing_10"
        android:paddingRight="@dimen/spacing_16"
        android:visibility="gone" />

</RelativeLayout>