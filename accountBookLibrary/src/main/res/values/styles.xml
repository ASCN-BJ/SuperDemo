<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="titleButtonStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="titleStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="contantStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    
    <style name="contantWhiteStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    
    <style name="add_node_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="popWindow_animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter_library</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit_library</item>
    </style>
    
    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="translucent" parent="@android:style/Theme.Dialog">  
         <item name = "android:windowBackground">@android:color/transparent</item>  
        <item name="android:windowIsTranslucent">true</item>  
        <item name="android:windowNoTitle">true</item>  
         
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>  
    </style>  
    
</resources>
